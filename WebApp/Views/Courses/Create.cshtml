@if (ViewData["Status"]?.ToString() == "ConnectionFailed")
{
    <span class="alert alert-danger">
        Unable to contact the server. Please try again later.
        @if (ViewData["StatusCode"] != null)
        {
            <text>Status Code: @ViewData["StatusCode"]</text>
        }
    </span>
}
else if (ViewData["Status"]?.ToString() == "Success")
{
    <span class="alert alert-success d-flex align-items-center justify-content-center">
        Course is created!
    </span>
}
else if (ViewData["Status"]?.ToString() == "AlreadyExist")
{
    <span class="alert alert-warning d-flex align-items-center justify-content-center">
        Courses already exist!
    </span>
}
else if (ViewData["Status"]?.ToString() == "Invalid")
{
    <span class="alert alert-danger d-flex align-items-center justify-content-center">
        You must enter a valid course!
    </span>
}
else if (ViewData["Status"]?.ToString() == "Unauthorized")
{
    <span class="alert alert-danger d-flex align-items-center justify-content-center">
        An error occurred. Please contact the web admin.
    </span>
}
else if (ViewData["StatusCode"] != null)
{
    <span class="alert alert-danger d-flex align-items-center justify-content-center">
        Error: @ViewData["StatusCode"]
    </span>
}


<section class="create">
    <div class="container">
        <h2>Create a Course</h2>
        <form asp-action="Create" asp-controller="Courses" method="post">
            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" class="form-control" id="Title" name="Title" asp-for="Title">
            </div>

            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" asp-for="Price">
            </div>

            <div class="mb-3">
                <label for="DiscountPrice" class="form-label">Discount Price</label>
                <input type="number" class="form-control" id="DiscountPrice" name="DiscountPrice" asp-for="DiscountPrice">
            </div>

            <div class="mb-3">
                <label for="LikesInNumbers" class="form-label">Likes (in numbers)</label>
                <input type="number" class="form-control" id="LikesInNumbers" name="LikesInNumbers" asp-for="LikesInNumbers">
            </div>

            <div class="mb-3">
                <label for="LikesInProcent" class="form-label">Likes (in percentage)</label>
                <input type="number" class="form-control" id="LikesInProcent" name="LikesInProcent" asp-for="LikesInProcent">
            </div>

            <div class="mb-3">
                <label for="Hours" class="form-label">Hours</label>
                <input type="number" class="form-control" id="Hours" name="Hours" asp-for="Hours">
            </div>

            <div class="mb-3">
                <label for="Author" class="form-label">Author</label>
                <input type="text" class="form-control" id="Author" name="Author" asp-for="Author">
            </div>

            <div class="mb-3">
                <label for="IsBestseller" class="form-label">Is Bestseller</label>
                <select class="form-select" id="IsBestseller" name="IsBestseller" asp-for="IsBestseller">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="ImageName" class="form-label">Image Name</label>
                <input type="text" class="form-control" id="ImageName" name="ImageName" asp-for="ImageName">
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</section>

