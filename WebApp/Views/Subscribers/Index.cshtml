



<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-6 text-center">
            <div class="alert alert-success">
            <h3>
                Account deleted successfully!
            </h3>

            </div>
            <h5>
                We are sorry to see you go. Please press the Sign Out button before returning to the homepage!
            </h5>
            <a asp-action="Index" asp-controller="Home" class="btn-theme">Go to homepage</a>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <span class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </span>
            }

            @if (!string.IsNullOrEmpty(ViewData["SuccessMessage"]?.ToString()))
            {
                <span class="alert alert-success">
                    @TempData["SuccessMessage"]
                </span>
            }
        </div>
    </div>
</div>


