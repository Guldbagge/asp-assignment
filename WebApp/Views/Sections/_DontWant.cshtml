<div class="dontWant">
    <div class="container">
       
        <div class="headning">
            <h1>Don't Want to Miss Anything?</h1>
            <img src="/images/Group.svg" alt="symbol of arrow">
        </div>

        <div class="contentSignUp">
            <form method="post" asp-controller="Subscribers" asp-action="Index" novalidate>
                 @*  <form method="post" asp-controller="Home" asp-action="Index" novalidate> *@
                <div class="contentSign">
                    <div class="column">
                        <h6>Sign up for <br> Newsletters</h6>
                    </div>
                        <div class="column">
                            <div class="input-group">
                                <input type = "checkbox" asp-for="NewsletterCheckbox1" />
                                <label asp-for="NewsletterCheckbox1">Daily Newsletter</label>
                            </div>
                                <span asp-validation-for="NewsletterCheckbox1"> </span>

                            <div class="input-group">
                                <input type="checkbox" asp-for="NewsletterCheckbox2" />
                                <label asp-for="NewsletterCheckbox2">Event Updates</label>
                            </div>
                                <span asp-validation-for="NewsletterCheckbox2"> </span>
                        </div>
                        
                        <div class="column">
                            <div class="input-group">
                                <input type="checkbox" asp-for="NewsletterCheckbox3" />
                                <label asp-for="NewsletterCheckbox3">Advertising Updates</label>
                            </div>
                                <span asp-validation-for="NewsletterCheckbox3"> </span>
                            <div class="input-group">
                                <input type="checkbox" asp-for="NewsletterCheckbox4" />
                                <label asp-for="NewsletterCheckbox4">Startups Weekly</label>
                            </div>
                                <span asp-validation-for="NewsletterCheckbox4"> </span>
                        </div>

                        <div class="column">
                            <div class="input-group">
                                <input type="checkbox" asp-for="NewsletterCheckbox5" />
                                <label asp-for="NewsletterCheckbox5">Week in Review</label>
                            </div class="input-group">
                                <span asp-validation-for="NewsletterCheckbox5"> </span>
                            <div class="input-group">
                                <input type="checkbox" asp-for="NewsletterCheckbox6" />
                                <label asp-for="NewsletterCheckbox6">Podcasts</label>
                            </div>
                                <span asp-validation-for="NewsletterCheckbox6"> </span>


                        </div>
                </div>

                <div class="contentEmail">
                    <div class="email">
                        <div id="form-email" class="input-group">
                            @* <label asp-for="Form.Email"></label> *@
                            <span asp-validation-for="Email"> </span>
                            <input asp-for="Email" />
                        </div>
                        <button id="form-submit" type="submit" class="btn-theme">Subscribe@* @Model.Title *@ </button>
                    </div>
                    
                    <div class="terms">
                        <p> <a href="#">*</a> Yes, I agree to the <a href="#">terms</a> and <a href="#">privacy policy</a>.</p>
                        <p><a asp-action="Index" asp-controller="Unsubscribe">Unsubscribe</a></p>
                    </div>

                </div>
            </form>
        </div>

        @if (ViewData["Status"]?.ToString() == "Success")
        {
            <span class="alert alert-success">
                Thank you for subscribing!
            </span>
        }
        else if (ViewData["Status"]?.ToString() == "AlreadyExist")
        {
            <span class="alert alert-warning">
                You have already subscribe!
            </span>
        }

        else if (ViewData["Status"]?.ToString() == "Invalid")
        {
            <span class="alert alert-danger">
                You must enter a vaild email address!
            </span>
        }

        else if (ViewData["Status"]?.ToString() == "ConnectionFailed")
        {
            <span class="alert alert-danger">
                Unable to contact the server. Please try again later.
            </span>
        }

            else if (ViewData["Status"]?.ToString() == "Unauthorized")
        {
            <span class="alert alert-danger">
                An error occurred. Please contact web admin.
            </span>
        }

    </div>
</div>
<script defer src="~/js/validation.js"></script>