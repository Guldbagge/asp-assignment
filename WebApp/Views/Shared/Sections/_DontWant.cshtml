
@model DontWantViewModel

@{
    ViewData["Title"] = "Model.Title";
}

<div class="dontWant">
    <div class="container">
        <div class="headning">
            <h1>Don't Want to Miss Anything?</h1>
            <img src="/images/Group.svg" alt="symbol of arrow">
        </div>

        <div class="contentSignUp">
            <form method="post" asp-controller="Home" asp-action="DontWant" novalidate>
                <div class="contentSign">
                    <div class="column">
                        <h6>Sign up for <br> Newsletters</h6>
                    </div>
                    <div class="column">
                        <div>
                            <input asp-for="Form.NewsletterCheckbox1" />
                            <label asp-for="Form.NewsletterCheckbox1">Daily Roundup</label>
                        </div>
  
                        <div>
                            <input asp-for="Form.NewsletterCheckbox2" />
                            <label asp-for="Form.NewsletterCheckbox2">Weekly Roundup</label>
                        </div>
                    </div>
                        
                        <div class="column">
                            <div>
                                <input asp-for="Form.NewsletterCheckbox3" />
                                <label asp-for="Form.NewsletterCheckbox3">Monthly Roundup</label>
                            </div>

                            <div>
                                <input asp-for="Form.NewsletterCheckbox4" />
                                <label asp-for="Form.NewsletterCheckbox4">Special Offers</label>
                            </div>
                        </div>

                        <div class="column">
                            <div>
                                <input asp-for="Form.NewsletterCheckbox5" />
                                <label asp-for="Form.NewsletterCheckbox5">New Products</label>
                            </div>

                            <div>
                                <input asp-for="Form.NewsletterCheckbox6" />
                                <label asp-for="Form.NewsletterCheckbox6">Events</label>
                            </div>

                        </div>
                </div>

                <div class="contentEmail">
                    <div class="email">
                        <div class="email-input">
                            <label asp-for="Form.Email"></label>
                            <span asp-validation-for="Form.Email"> </span>
                            <input asp-for="Form.Email" />
                        </div>
                        <button id="form-submit" type="submit" class="btn-theme-s">@Model.Title</button>
                    </div>
                    
                    <div class="terms">
                        <p> <a href="#">*</a> Yes, I agree to the <a href="#">terms</a> and <a href="#">privacy policy</a>.</p>

                    </div>
                </div>
            </form>
        </div>



    </div>
</div>